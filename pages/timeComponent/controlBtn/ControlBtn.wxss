.btn-space {
    width: 100%;
    padding: 40rpx 0px;
    display: flex;
    justify-content: center;
}
.btn-space .btn {
    width: 10vw;
    height: 10vw;
    margin: 0 40rpx;
}
.btn-space .btn .image {
    width: 100%;
    height: 100%;
}
.btn-space .btn .pause-img,
.btn-space .btn .start-img {
    animation: show 0.5s ease-out 1;
}
@keyframes show {
    0% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}
