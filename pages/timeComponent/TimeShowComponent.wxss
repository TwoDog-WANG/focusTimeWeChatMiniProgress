.show-time-space {
    width: 100vw;
    height: 100vh;
    display: flex;
    flex-direction: column;
    background-image: linear-gradient(180deg, white, rgb(219, 219, 219));
}
.show-time-space .time-canvas {
    flex-grow: 5;
}
.show-time-space .doing-thing {
    flex: 0;
    display: flex;
    align-items: flex-end;
    padding: 20rpx 0;
}
.show-time-space .doing-thing .doing-text {
    display: inline-block;
    text-align: center;
    font-size: 40rpx;
    letter-spacing: 3px;
    width: 100%;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.show-time-space .control-btn {
    flex: 1;
    width: 100%;
}